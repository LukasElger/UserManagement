- if @user.errors.any?
  %div.alert.alert-danger.flash.alert-dismissible.fade.in
    %ul
      - @user.errors.full_messages.each do |msg|
        %li= msg

#sign-up-form.container
  .col-sm-offset-4.col-sm-4
    %h2= t "users.edit.header"
    = form_for(@user, url: update_profile_path, method: :patch) do |f|
      .field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email"
      .field
        = f.label :password
        %br/
        = f.password_field :password
      .field
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation
      .field
        = f.label :current_password
        %br/
        = f.password_field :current_password
      .field
        = f.label :locale
        %br/
        = f.select :locale, [[t("lang.de"), :de], [t("lang.en"), :en]]
      .actions
        = f.submit t("actions.update")
    = button_to t("actions.back"), root_path, method: :get, id: "back_to_root_button"
