<h1 id="index"><%= link_to 'Create new User', new_user_path %></h1>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">E-Mail</th>
      <th scope="col">Show</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <th><%= user.id %></th>
        <th><%= user.name %></th>
        <th><%= user.email %></th>
        <th><%= link_to 'Show', user_path(user) %></th>
        <th><%= link_to 'Edit', edit_user_path(user) %></th>
        <th><%= link_to 'Delete', user_path(user), method: :delete, data: {confirm: "Möchten Sie den Benutzer wirklich löschen?"}, id: "delete_user_link_#{user.id}" %></th>
      </tr>
    <% end %>
  </tbody>
</table>
