.container-fluid
  .row.justify-content-center
    .col-sm-5
      .active_block
        %h1.header= t("users.active")
        %ul.default_list
          -@active.each do |a|
            %li
              .container
                .float-left=a.name
                %span.badge.badge-danger.float-right= t("users.deactivate")

    .col-sm-5
      .active_block
        %h1.header= t("users.not_active")
        %ul.default_list
          -@inactive.each do |a|
            %li
              .container
                .float-left=a.name
                %span.badge.badge-success.float-right= t("users.activate")
