%h1#index= link_to 'Create new User', new_user_path

.container
  %input#SearchInput{:onkeyup => "SearchFunction()", :placeholder => "Search..", :type => "text"}/
  %table.table#SearchableTable
    %thead.thead-dark
      %tr
        %th{:scope => "col"} ID
        %th{:scope => "col"} Name
        %th{:scope => "col"} E-Mail
        %th{:scope => "col"} Show
        %th{:scope => "col"} Edit
        %th{:scope => "col"} Delete
    %tbody
      - @users.each do |user|
        %tr
          %td= user.id
          %td= user.name
          %td= user.email
          %td= link_to 'Show', user_path(user)
          %td= link_to 'Edit', edit_user_path(user)
          %td= link_to 'Delete', user_path(user), method: :delete, data: {confirm: "Möchten Sie den Benutzer wirklich löschen?"}, id: "delete_user_link_#{user.id}"
