= button_to t(".create_new"), new_user_path, class: "btn btn-default"
%h1#index_header= t(".header")

.container
  %input#SearchInput{:onkeyup => "SearchFunction()", :placeholder => t("actions.search"), :type => "text"}/
  %table.table#SearchableTable
    %thead.thead-dark
      %tr#header_row
        %th#user_id_head{:scope => "col"}= User.human_attribute_name(:id)
        %th#user_name_head{:scope => "col"}= User.human_attribute_name(:name)
        %th#user_email_head{:scope => "col"}= User.human_attribute_name(:email)
        %th#user_admin_head{:scope => "col"}= User.human_attribute_name(:account_active)
        %th#show_header{:scope => "col"}= t "actions.show"
        %th#edit_header{:scope => "col"}= t "actions.edit"
        %th#delete_header{:scope => "col"}= t "actions.delete"
    %tbody
      - @users.each do |user|
        %tr.user_row{id: dom_id(user)}
          %td#user_id_body= user.id
          %td#user_name_body= user.name
          %td#user_email_body= user.email
          %td#user_active_body= user.decorate.active_human
          %td#show_body= link_to t('actions.show'), user_path(user)
          %td#edit_body= link_to t('actions.edit'), edit_user_path(user)
          %td#delete_body= link_to t('actions.delete'), user_path(user), method: :delete, data: {confirm: t("flash.delete")}, id: "delete_user_link_#{user.id}"
  = paginate @users
