.container.col-sm-4#new_user_form
  %h1.header= t "views.users.new.header"
  = simple_form_for(@user, url: users_path) do |f|
    = f.input :name, placeholder: User.human_attribute_name(:name)
    = f.input :email, placeholder: User.human_attribute_name(:email)
    = f.input :password, placeholder: User.human_attribute_name(:password)
    = f.input :password_confirmation, placeholder: User.human_attribute_name(:password_confirmation)
    .row
      .col.items_centered
        = f.input :admin, as: :boolean
      .col.items_centered
        = f.input :account_active, as: :boolean
    = f.submit t("actions.create"), class: 'form-control'
  = button_to t("actions.back"), :back, method: :get, class: 'form-control', id: "back_to_root_button"
  %br
