%h1= t("versions.header")

.container
  %input#SearchInput{:onkeyup => "SearchFunction()", :placeholder => t("actions.search"), :type => "text"}/
  %table.table#SearchableTable
    %thead.thead-dark
      %tr#header_row
        %th#version_id_head{:scope => "col"}= User.human_attribute_name(:id)
        %th#version_name_head{:scope => "col"}= User.human_attribute_name(:name)
        %th#version_action_head{:scope => "col"}= t "versions.action"
        %th#version_created_at_head{:scope => "col"}= t "versions.created_at"
    %tbody
      - @versions.reverse.each do |version|
        - version = VersionDecorator.decorate version
        %tr#body_row
          %td#version_id_body= version.item_id
          %td#version_name_body= version.item.name
          %td#version_event_body= version.event
          %td#version_created_at_body= version.created_at
