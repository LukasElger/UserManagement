%li.dropdown.pc-menu
  %a#user-settings.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
    %span#user-name= current_user.name
    %span.caret
  - if current_user.admin == true
    %ul.dropdown-menu{:role => "menu"}
      %li= link_to 'Users', users_path
      %li= link_to 'Edit Profile', edit_profile_path
      %li= link_to 'Log out', destroy_user_session_path, method: :delete
    %li.mobile-menu
      = link_to 'Users', destroy_user_session_path, method: :delete
    %li.mobile-menu
      = link_to 'Edit Profile', users_path
    %li.mobile-menu
      = link_to 'Log out', destroy_user_session_path, method: :delete
  - else
    %ul.dropdown-menu{:role => "menu"}
      %li= link_to 'Edit Profile', edit_profile_path(current_user)
      %li= link_to 'Log out', destroy_user_session_path, method: :delete
    %li.mobile-menu
      = link_to 'Edit Profile', edit_profile_path(current_user)
    %li.mobile-menu
      = link_to 'Log out', destroy_user_session_path, method: :delete
