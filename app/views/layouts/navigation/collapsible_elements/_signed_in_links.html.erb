  </ul>
  </li>

  <li class="mobile-menu">
  <%= link_to 'Edit Profile', edit_user_path(current_user) %>
  </li>
  <li class="mobile-menu">
  <%= link_to 'Log out', destroy_user_session_path, method: :delete %>
