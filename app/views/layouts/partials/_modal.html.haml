#switchModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %h5#exampleModalLabel.modal-title Benutzer wechseln
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
      .modal-body
        = simple_form_for :new_session, url: switch_user_path do |f|
          = f.input :id, as: :select, collection: User.where("account_active = true").order(:name).decorate
          = f.submit I18n.t("actions.login"), class: "form-control", data: {confirm: I18n.t("flash.general.logout")}
      .modal-footer
        %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"} Close
