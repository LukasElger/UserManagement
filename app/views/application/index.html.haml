- if !user_signed_in?
  %h1= t "application.index.welcome"
  = button_to t("actions.login"), login_path, method: :get, class: "btn btn-default"
- else
  - if current_user.admin?
    %h1= t "application.index.header"
    .container
      %table.table
        %thead.thead-dark
          %tr
            %th{:scope => "col"}= User.human_attribute_name(:id)
            %th{:scope => "col"}= User.human_attribute_name(:name)
            %th{:scope => "col"}= User.human_attribute_name(:email)
            %th{:scope => "col"}= t "actions.show"
        %tbody
          - @users.each do |user|
            %tr{id: dom_id(user)}
              %td= user.id
              %td= user.name
              %td= user.email
              %td
                = link_to user_path(user) do
                  %i.fas.fa-search
  - else
    %h1= t "application.index.welcome"
