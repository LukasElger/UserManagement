- if !user_signed_in?
  .application_index.row
    .col.align_center
      %h1#header= t "application.index.welcome"
      = button_to t("actions.login"), login_path, method: :get, class: "btn btn-primary"
- else
  - if current_user.admin?
    .container.application_index
      %h1#header= t "application.index.header"
      %table.default.table_centered_elements
        %thead.thead-dark
          %tr
            %th{:scope => "col"}= User.human_attribute_name(:id)
            %th{:scope => "col"}= User.human_attribute_name(:name)
            %th{:scope => "col"}= User.human_attribute_name(:email)
            %th{:scope => "col"}= t "actions.show"
        %tbody
          - @users.each do |user|
            %tr{id: dom_id(user)}
              %td= user.id
              %td= user.name
              %td= user.email
              %td
                = link_to user_path(user) do
                  %i.fas.fa-search{"data-placement" => "bottom", "data-toggle" => "tooltip", :title => t("tooltips.users.show") + " #{user.name}"}
  - else
    %h1= t "application.index.welcome"
