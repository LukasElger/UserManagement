.container.application_index
  - if !user_signed_in?
    .row
      .col.align_center
        %h1.header= t "views.application.index.welcome_message"
        = button_to t("views.application.actions.login"), login_path, method: :get, class: "btn btn-primary"
  - else
    - if current_user.admin?
      %h1.header= t "views.application.index.header"
      .table_conatiner
        %table.default.table_centered_elements
          %thead.thead-dark
            %tr
              %th{:scope => "col"}= User.human_attribute_name(:id)
              %th{:scope => "col"}= User.human_attribute_name(:name)
              %th{:scope => "col"}= User.human_attribute_name(:email)
              %th{:scope => "col"}= t "actions.show"
          %tbody
            - @users.each do |user|
              %tr{id: dom_id(user)}
                %td= user.id
                %td= user.name
                %td= user.email
                %td
                  = link_to user_path(user) do
                    %i.fas.fa-search{"data-placement" => "bottom", "data-toggle" => "tooltip", title: "#{I18n.t("tooltips.show", model: User.model_name.human, count: 1)}"}
    - else
      %h1.header= t "views.application.index.welcome_message"
