.container.col-sm-4.index
  %h1.header= I18n.t("views.contur/databases.edit.header")
  = simple_form_for(@db) do |f|
    = f.input :url, autocomplete: "url", placeholder: Contur::Database.human_attribute_name(:url)
    = f.input :vm_username, autocomplete: "vm_username", placeholder: Contur::Database.human_attribute_name(:vm_username)
    = f.input :contur_type, as: :select, collection: Contur::Database::ANPASSUNGEN, autocomplete: "contur_type"
    = f.input :github_branch, autocomplete: "github_branch", placeholder: Contur::Database.human_attribute_name(:github_branch)
    = f.association :server, as: :select, collection: Contur::Server.order(:hostname).decorate
    = f.input :starts_at, autocomplete: "starts_at", placeholder: Contur::Database.human_attribute_name(:starts_at)
    = f.input :ends_at, autocomplete: "ends_at", placeholder: Contur::Database.human_attribute_name(:ends_at)
    = f.input :comment, placeholder: Contur::Database.human_attribute_name(:comment)
    = f.submit I18n.t("actions.update"), class: "form-control"
  = button_to I18n.t("views.contur/databases.edit.footer"), contur_database_path(@db), method: :delete, class: "form-control", id: "delete_db_button", data: {confirm: I18n.t("flash.delete", model: Contur::Database.model_name.human, count: 1)}
  = button_to I18n.t("actions.back"), :back, method: :get, class: "form-control", id: "back_to_root_button"
  %br
