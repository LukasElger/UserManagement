.container.index.max
  .card_block
    %h1.header= "#{I18n.t("views.contur/customers.show.header", model: @cr.name)}"
    %ul.default_list
      %li
        %dl.row
          %dt.col-sm-3= Contur::Customer.human_attribute_name(:name)
          %dd.col-sm-9= @cr.name
      %li
        %dl.row
          %dt.col-sm-3= Contur::Customer.human_attribute_name(:email)
          %dd.col-sm-9= @cr.email
      %li
        %dl.row
          %dt.col-sm-3= Contur::Customer.human_attribute_name(:phone_number)
          %dd.col-sm-9= @cr.phone_number
      %li
        %dl.row
          %dt.col-sm-3= Contur::Customer.human_attribute_name(:fax)
          %dd.col-sm-9= @cr.fax
      %li
        %dl.row
          %dt.col-sm-3= Contur::Customer.human_attribute_name(:zip_code)
          %dd.col-sm-9= @cr.zip_code
      %li
        %dl.row
          %dt.col-sm-3= Contur::Customer.human_attribute_name(:city)
          %dd.col-sm-9= @cr.city
      %li
        %dl.row
          %dt.col-sm-3= Contur::Customer.human_attribute_name(:street)
          %dd.col-sm-9= @cr.street
      %li
        %dl.row
          %dt.col-sm-3= Contur::Customer.human_attribute_name(:tanss_number)
          %dd.col-sm-9= @cr.tanss_number
      %li
        %dl.row
          %dt.col-sm-3= Contur::Customer.human_attribute_name(:server)
          %dd.col-sm-9
            -@cr.server.each do |s|
              -server=Contur::Server.find(s.id)
              =link_to s.hostname, contur_server_path(server)
      %li
        %dl.row
          %dt.col-sm-3= Contur::Customer.human_attribute_name(:databases)
          %dd.col-sm-9
            -@cr.databases.each do |db|
              -database=Contur::Database.find(db.id)
              =link_to db.vm_username, contur_database_path(database)
      %li
        %dl.row
          %dt.col-sm-3= Contur::Customer.human_attribute_name(:comment)
          %dd.col-sm-9= @cr.comment
  %br
  .row.justify-content-center
    .col-sm-4
      = button_to I18n.t("actions.back"), :back, method: :get, class: "form-control", id: "back_to_root_button"
    .col-sm-4
      = button_to I18n.t("actions.edit"), edit_contur_customer_path(@cr), method: :get, class: "form-control", id: "edit_customer_button"
  %br
