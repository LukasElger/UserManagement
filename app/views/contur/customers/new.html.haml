.container.col-sm-4.index
  %h1.header= I18n.t("views.contur/customers.new.header")
  = simple_form_for(@cr, url: contur_customers_path) do |f|
    = f.input :name, placeholder: Contur::Customer.human_attribute_name(:name)
    = f.input :email, placeholder: Contur::Customer.human_attribute_name(:email)
    = f.input :phone_number, placeholder: Contur::Customer.human_attribute_name(:phone_number)
    = f.input :fax, placeholder: Contur::Customer.human_attribute_name(:fax)
    = f.input :zip_code, placeholder: Contur::Customer.human_attribute_name(:zip_code)
    = f.input :city, placeholder: Contur::Customer.human_attribute_name(:city)
    = f.input :street, placeholder: Contur::Customer.human_attribute_name(:street)
    = f.input :tanss_number, placeholder: Contur::Customer.human_attribute_name(:tanss_number)
    = f.input :website, placeholder: Contur::Customer.human_attribute_name(:website)
    = f.input :comment, placeholder: Contur::Customer.human_attribute_name(:comment)
    = f.submit I18n.t("actions.create"), class: "form-control"
  = button_to I18n.t("actions.back"), :back, method: :get, class: "form-control", id: "back_to_root_button"
  %br
